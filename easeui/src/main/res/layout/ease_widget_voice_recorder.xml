<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ease_recording_hint_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mic_image"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20.0dip"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/icon_chat_rotate" />

    <TextView
        android:id="@+id/recording_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mic_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:gravity="center"
        android:padding="2.0dip"
        android:text="@string/move_up_to_cancel"
        android:textSize="12.0sp" />
</RelativeLayout>